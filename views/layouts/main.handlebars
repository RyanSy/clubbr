<!-- Here is the main HTML where handlebars will render to -->

<!DOCTYPE html>
<html lang="en">

	<head>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
		<link rel="stylesheet" href="/assets/css/style.css" type="text/css" />
		<title>ClubbR</title>
	</head>

	<body class="container text-center">

		<nav class="navbar navbar-inverse navbar-fixed-top">
		  <div class="container">
		    <div class="navbar-header">
		      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </button>
		      <a class="navbar-brand" href="/">ClubbR</a>
		    </div>

			<div class="col-sm-3 col-md-3 pull-left">
			  <form class="navbar-form" role="search" action="/events" method="POST">
			    <div class="input-group col-lg-*">
			      <input type="text" class="form-control" placeholder="Search" name="searchTerm">
			      <div class="input-group-btn">
			      <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
			      </div>
			    </div>
			  </form>
			</div>

	    <div id="navbar" class="container collapse navbar-collapse">
	      <ul class="nav navbar-nav navbar-right">
	        {{#unless logged_in}}
	          <li><a href="/users/sign-in">Sign In</a></li>
	          <li><a href="/users/new">Sign Up</a></li>
	        {{/unless}}
	        {{#if logged_in}}
	          <li><a href="/events/myevents">My Events</a></li>
	          <li><a href="/events/create">Add Event</a></li>
	          <li><a href="/users/sign-out">Sign Out</a></li>
	        {{/if}}
	      </ul>
	    </div>
	  </div>
	</nav>

	<div id="main" class="container">
		{{{ body }}}
	</div>

		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	</body>
</HTML>
