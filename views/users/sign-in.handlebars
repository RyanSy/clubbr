<!-- this is the sign_in.handlebars file inside the users folder of the views folder
views/users/sign_in.handlebars -->
<form class="create-update-form" action="/users/sign-in" method="POST">

  <div class="form-group">
    <input placeholder="Email" type="text" name="email">
  </div>

  <div class="form-group">
    <input placeholder="Password" type="password" name="password">
  </div>

  <button type="submit">Sign In</button>
  <br>
  <a href="/users/forgot">Forgot Password?</a>
</form>
