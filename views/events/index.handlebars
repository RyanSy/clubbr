{{#unless logged_in}}
  <p>Sign in to add an event.</p>
{{/unless}}

<h2>Search Events:</h2>

<form class="create-update-form" action="/events" method="POST">

  <div class="form-group">
    <input type="text" name="searchTerm">
  </div>

  <button type="submit">Search</button>

</form>

<div class="list-group">
  {{#each events}}
  <ul>
    <a href="#">
      {{this.name}}<br>
      {{this.venue}}<br>
      {{this.genre}}<br>
    </a>
  </ul>
  {{/each}}
</div>
