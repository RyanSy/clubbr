<form name="upload" class="create-update-form" action="/events/create" method="POST" enctype="multipart/form-data">

  <h2>Enter event details:</h2>

  <div class="form-group">
    <input class=".col-lg-*" type="text" name="name" placeholder="Name">
  </div>

  <div class="form-group">
    <input class=".col-lg-*" type="text" name="genre" placeholder="Genre">
  </div>

  <div class="form-group">
    <input class=".col-lg-*" type="text" name="venue" placeholder="Venue">
  </div>

  <div class="form-group">
    <input class=".col-lg-*"  type="file" name="image">
  </div>


  <button class="btn" type="submit">Add Event</button>

</form>
