<div class="container eventInput">
	<div class="row text-center">


		<form class="create-update-form" action="/events/myevents" method="POST">
			<h2>Update event details:</h2>
			{{#each events}}
				<input type="hidden" name="id" value="{{id}}">
				<div class="form-group">
					<label for="name">Name: </label>
			    <input class=".col-lg-*" type="text" name="name" value={{name}}>
			  </div>

				<div class="form-group">
					<label for="djs">DJs: </label>
			    <input class=".col-lg-*" type="text" name="djs" value={{djs}}>
			  </div>

			  <div class="form-group">
					<label for="genre">Genre: </label>
			    <input class=".col-lg-*" type="text" name="genre" value={{genre}}>
			  </div>

			  <div class="form-group">
					<label for="Venue">Venue: </label>
			    <input class=".col-lg-*" type="text" name="venue" value={{venue}}>
			  </div>

				<div class="form-group">
					<label for="Address">Address: </label>
			    <input class=".col-lg-*" type="text" name="address" value={{address}}>
			  </div>

				<div class="form-group">
					<label for="Phone">Phone: </label>
					<input class=".col-lg-*" type="text" name="phone" value={{phone}}>
				</div>

				<div class="form-group">
					<label for="Hours">Hours: </label>
					<input class=".col-lg-*" type="text" name="hours" value={{hours}}>
				</div>

				<div class="form-group">
					<label for="Reservations">Reservations: </label>
					<input class=".col-lg-*" type="text" name="reservations" value={{reservations}}
				</div>


			{{/each}}

			<button class="btn btn-theme" type="submit">Save Changes</button>
		</form>
		<br>
		<form class="create-update-form" action="/events/myevents" method="POST">
			<button class="btn" type="submit">Cancel</button>
		</form>

	</div>
</div>
