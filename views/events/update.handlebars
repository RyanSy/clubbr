<form class="create-update-form" action="/events/myevents" method="POST">
  <h2>Update event details:</h2>
  {{#each events}}
    <input type="hidden" name="id" value="{{id}}">
  <div class="form-group">
    <label for="name">Name: </label>
    <input type="text" id="name" name="name" value="{{name}}">
  </div>

  <div class="form-group">
    <label for="genre">Genre: </label>
    <input type="text" id="genre" name="genre" value="{{genre}}">
  </div>

  <div class="form-group">
    <label for="venue">Venue: </label>
    <input type="text" id="venue" name="venue" value="{{venue}}">
  </div>
  {{/each}}

  <button class="btn" type="submit">Save Changes</button>
</form>
<br>
<form class="create-update-form" action="/events/myevents" method="GET">
  <button class="btn" type="submit">Cancel</button>
</form>
